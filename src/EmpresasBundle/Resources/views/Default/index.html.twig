    <h1>Listado de empresas</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th>Aciones</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td><a href="{{ path('empresa_show', { 'id': empresa.id }) }}" >{{ empresa.id }}</a></td>
                <td>{{ empresa.nombre }}</td>
                <td>{{ empresa.imagen }}</td>
                <td>{{ empresa.estado }}</td>
                <td>
                      <div class="btn-group mr-2" role="group" aria-label="Second group">
                        <a href="{{ path('empresa_show', { 'id': empresa.id }) }}" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('empresa_edit', { 'id': empresa.id }) }}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                      </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a href="{{ path('empresa_nueva') }}" class="btn btn-primary">Crear una nueva empresa</a>
 
{% endblock %}
