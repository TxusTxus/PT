{% extends 'base.html.twig' %}

{% block body %}
    
                {#Muestra la barra superior#}
                {% embed "barranavegacion.html.twig" %}{% endembed %}

    <div class="container" style="margin-top: 20px;">
        <div class="row my-flex-card" >  
            <div class="col-lg-6">
                <div class="card border-info">
                    <div class="card-header">Ficha trabajador</div>
                    <div class="card-body">
                        {{ form_start(edit_form) }}

                                <b><i class="fa fa-user"></i> {{ form_label(edit_form.nombre) }}</b>
                                {{ form_widget(edit_form.nombre) }}
                                <b><i class="fa fa-address-card"></i> {{ form_label(edit_form.dni) }}</b>
                                {{ form_widget(edit_form.dni) }}
                                <b><i class="fa fa-id-card-o"></i> {{ form_label(edit_form.codigo) }}</b>
                                {{ form_widget(edit_form.codigo) }}                                
                                <b>{{ form_label(edit_form.observaciones) }}</b>
                                {{ form_widget(edit_form.observaciones) }}
                                <hr>
                            <input type="submit" value="Guardar" class="btn btn-primary"/>
                            <a href="{{ path('trabajadores_lista') }}" class="btn btn-primary">Volver a la lista</a>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
