{% extends 'base.html.twig' %}

{% block body %}
    
                {#Muestra la barra superior#}
                {% embed "barranavegacion.html.twig" %}{% endembed %}
    <h1>Trabajadores</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Dni</th>
                <th>Nombre</th>
                <th>Baja</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for trabajadore in trabajadores %}
            <tr>
                <td>{{ trabajadore.codigo }}</td>
                <td>{{ trabajadore.dni }}</td>
                <td>{{ trabajadore.nombre }}</td>
                <td>{% if trabajadore.baja %}Inactivo{% else %}Activo{% endif %}</td>
                <td>
                    <div class="btn-group mr-2" role="group" aria-label="Second group">
                       <a href="{{ path('trabajadores_show', { 'id': trabajadore.id , 'ficha':'ficha'}) }}" class="btn btn-primary btn-sm" title="Ver ficha"><i class="fa fa-eye"></i></a>
                       <a href="{{ path('trabajadores_edit', { 'id': trabajadore.id }) }}" class="btn btn-primary btn-sm" title="Modificar datos"><i class="fa fa-edit"></i></a>                    
                     </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
