{% extends 'base.html.twig' %}

{% block body %}
    
{# Muestra la barra superior #}
{% embed "barranavegacion.html.twig" %}{% endembed %}
    <h1>Incidencia</h1>

    <div class="container" style="margin-top: 20px;">
        <table>
            <tr><th>Cliente:</th><td> {{ incidencia.cliente }}</td></tr>
            <tr><th>Producto:</th><td> {{ incidencia.producto.familia }}: {{ incidencia.producto }} </td></tr>
            <tr><th>Direccion:</th><td> {{ incidencia.direccion }}</td></tr>
        </table>
        <hr>
    {{ form_start(edit_form) }}

        <div class="row" style="margin-bottom: 20px;">  
            <div class="col-lg-2">
                <b>{{ form_label(edit_form.fecha) }}</b>
                {{ form_widget(edit_form.fecha) }}
            </div>
            <div class="col-lg-8">
                <b>{{ form_label(edit_form.descripcion) }}</b>
                {{ form_widget(edit_form.descripcion) }}
            </div>
            <div class="col-lg-2">
                <b>{{ form_label(edit_form.importe) }}</b>
                {{ form_widget(edit_form.importe) }}
            </div>            
        </div>
        <div class="row" style="margin-bottom: 20px;">  
            <div class="col-lg-12">
                <b>{{ form_label(edit_form.observaciones) }}</b>
                {{ form_widget(edit_form.observaciones) }}
            </div>
        </div>
        <input type="submit" value="Guardar" onclick="desmarcaCambio()" class="btn btn-primary" />
        <a class="btn btn-primary" href="javascript:window.history.go(-1);">Volver</a>
    {{ form_end(edit_form) }}
    </div>
{# 
Script para revisar si hay cambios y que muestre el aviso antes de abandonar la p√°gina
#}
{% embed "marcarcambios.html.twig" %}{% endembed %}

{% endblock %}
