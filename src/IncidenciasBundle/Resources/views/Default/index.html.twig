{% extends 'base.html.twig' %}

{% block body %}
                 {#Muestra la barra superior#}
                {% embed "barranavegacion.html.twig" %}{% endembed %}
    <h1>Listado de incidencias</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>Importe</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for incidencia in incidencias %}
            <tr>
                <td><a href="{{ path('incidencia_show', { 'id': incidencia.id }) }}">{{ incidencia.id }}</a></td>
                <td>{% if incidencia.fecha %}{{ incidencia.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ incidencia.descripcion }}</td>
                <td>{{ incidencia.importe }}</td>
                <td>{{ incidencia.observaciones }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('incidencia_show', { 'id': incidencia.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('incidencia_edit', { 'id': incidencia.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('incidencia_new') }}">Create a new incidencia</a>
        </li>
    </ul>
{% endblock %}
