{% extends 'base.html.twig' %}

{% block body %}
    
         {#Muestra la barra superior#}
                {% embed "barranavegacion.html.twig" %}{% endembed %}
    <h1>Listado de partes</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cliente</th>
                <th>Trabajador</th>
                <th>Fecha</th>
                <th>Entrada</th>
                <th>Salida</th>
                <th>Tiempo</th>
                <th>Material</th>
                <th>Observaciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parte in partes %}
            <tr>
                <td>{{ parte.id }}</td>
                <td>{{ parte.cliente }}</td>
                <td>{{ parte.trabajador }}</td>
                <td>{% if parte.fechaParte %}{{ parte.fechaParte|date('d-m-Y') }}{% endif %}</td>
                <td>{% if parte.fechaEntrada %}{{ parte.fechaEntrada|date('H:i') }}{% endif %}</td>
                <td>{% if parte.fechaSalida %}{{ parte.fechaSalida|date('H:i') }}{% endif %}</td>
                <td>{{ parte.tiempo }}</td>
                <td>{% if parte.material %}SÃ­{% else %}No{% endif %}</td>
 {#               <td>{{ parte.firma }}</td>#}
                <td>{{ parte.observaciones }}</td>
                <td>
                     <div class="btn-group mr-2" role="group" aria-label="Second group">
                       <a href="{{ path('partes_show', { 'id': parte.id}) }}" class="btn btn-primary btn-sm" title="Ver parte"><i class="fa fa-eye"></i></a>
                       <a href="{{ path('partes_edit', { 'id': parte.id }) }}" class="btn btn-primary btn-sm" title="Modificar datos"><i class="fa fa-edit"></i></a>                    
                     </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
