{% extends 'base.html.twig' %}

{% block body %}
                 {#Muestra la barra superior#}
                {% embed "barranavegacion.html.twig" %}{% endembed %}
                
    <h1>Nuevo Cliente</h1>
    <div class="container" style="margin-top: 20px;">
        {{ form_start(form) }}
        <div class="row" style="margin-bottom: 20px;">  
            
            <div class="col-lg-6">
                <b><i class="fa fa-user"></i> {{ form_label(form.nombre) }}</b>
                {{ form_widget(form.nombre) }}
            </div>
            <div class="col-lg-3">
                <b><i class="fa fa-phone"></i> {{ form_label(form.telefono) }}</b>
                {{ form_widget(form.telefono) }}
            </div>
            <div class="col-lg-6">
                <b><i class="fa fa-at"></i> {{ form_label(form.email) }}</b>
                {{ form_widget(form.email) }}
            </div>
            <div class="col-lg-6">
                <b><i class="fa fa-user-circle"></i> {{ form_label(form.contacto) }}</b>
                {{ form_widget(form.contacto) }}
            </div>
        </div>
            
        <div class="row" style="margin-bottom: 20px;">  
            <div class="col-lg-10">
                <b><i class="fa fa-map-marker"></i> {{ form_label(form.direccion) }}</b>
                {{ form_widget(form.direccion) }}
            </div>
            <div class="col-lg-3">
                <b>{{ form_label(form.codigoPostal) }}</b>
                {{ form_widget(form.codigoPostal) }}
            </div>
            <div class="col-lg-4">
                <b>{{ form_label(form.poblacion) }}</b>
                {{ form_widget(form.poblacion) }}
            </div>
            <div class="col-lg-4">
                <b>{{ form_label(form.provincia) }}</b>
                {{ form_widget(form.provincia) }}
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px;">  
            <div class="col-lg-12">
                <b>{{ form_label(form.observaciones) }}</b>
                {{ form_widget(form.observaciones) }}
            </div>
        </div>
        <input type="submit" value="Guardar cambios" onclick="desmarcaCambio()" class="btn btn-primary" />
    {{ form_end(form) }}
    </div>   
</div>    
{# 
Script para revisar si hay cambios y que muestre el aviso antes de abandonar la p√°gina
#}
{% embed "marcarcambios.html.twig" %}{% endembed %}

{% endblock %}
