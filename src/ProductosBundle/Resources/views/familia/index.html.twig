                                        <a class="btn btn-primary btn-flat" href="{{ path('familia_edit', { 'id': familium.id }) }}"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div> 
            </div>
        </div>
    </div>
{% endblock %}
